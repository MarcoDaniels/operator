{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "dist/",
    "declaration": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "module": "commonjs",
    "target": "es2017",
    "strictPropertyInitialization": true,
    "allowJs": false,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "esnext"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}