{
  "name": "operator",
  "version": "1.0.0",
  "description": "operator provides a GraphQL API",
  "author": "Marco Daniel Martins <marcodanielmartins@gmail.com>",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "build": "rm -rf build/* && tsc --p tsconfig.prod.json --pretty",
    "serve": "yarn build && firebase serve --only hosting,functions",
    "test": "jest --collectCoverage=false",
    "test:coveralls": "jest && cat ./coverage/lcov.info | coveralls",
    "test:coverage": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.test.(ts)"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/src/**/__mocks__/**",
      "!<rootDir>/src/index.ts"
    ]
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "firebase-admin": "~5.10.0",
    "firebase-functions": "^0.9.0",
    "graphql": "^0.13.2",
    "graphql-tools": "^2.23.1"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/graphql": "^0.12.6",
    "@types/jest": "^23.3.13",
    "jest": "^24.0.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.10.0",
    "typescript": "^2.5.3"
  }
}
