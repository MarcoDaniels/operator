{
  "name": "operator",
  "description": "GraphQL Server API",
  "author": "Marco Daniel Martins <marcodanielmartins@gmail.com>",
  "license": "MIT",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarcoDaniels/operator.git"
  },
  "main": "build/index.js",
  "scripts": {
    "build": "rm -rf build/* && tsc --p tsconfig.prod.json",
    "serve": "yarn build && firebase serve --only hosting,functions",
    "lint": "eslint -c .eslintrc src/**/*.ts",
    "test": "jest",
    "test:coveralls": "jest && cat ./coverage/lcov.info | coveralls",
    "clean": "rm -rf build/ coverage/"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.test.(ts)"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/src/**/__mocks__/**",
      "!<rootDir>/src/index.ts",
      "!<rootDir>/src/database.ts"
    ]
  },
  "dependencies": {
    "apollo-server-express": "2.19.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "firebase-admin": "9.4.2",
    "firebase-functions": "3.13.0",
    "graphql": "15.4.0"
  },
  "devDependencies": {
    "@types/eslint": "7.2.2",
    "@types/express": "4.17.6",
    "@types/jest": "23.3.14",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "coveralls": "3.0.11",
    "eslint": "7.8.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "24.9.0",
    "prettier": "2.1.1",
    "ts-jest": "24.3.0",
    "typescript": "4.1.3"
  }
}
