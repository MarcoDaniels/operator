{
  "name": "operator",
  "description": "GraphQL Server API",
  "author": "Marco Daniel Martins <marcodanielmartins@gmail.com>",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarcoDaniels/operator.git"
  },
  "main": "build/index.js",
  "scripts": {
    "build": "rm -rf build/* && tsc --p tsconfig.prod.json --pretty",
    "serve": "yarn build && firebase serve --only hosting,functions",
    "lint": "tslint --fix --project tslint.json src/**/*.ts",
    "test": "jest --collectCoverage=false",
    "test:coveralls": "jest && cat ./coverage/lcov.info | coveralls",
    "test:coverage": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.test.(ts)"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/src/**/__mocks__/**",
      "!<rootDir>/src/index.ts",
      "!<rootDir>/src/database.ts"
    ]
  },
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "firebase-admin": "^7.0.0",
    "firebase-functions": "^2.2.0",
    "graphql": "^14.1.1",
    "graphql-tools": "^4.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.0.7",
    "@types/jest": "^23.3.13",
    "coveralls": "^3.0.3",
    "jest": "^24.0.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.10.0",
    "typescript": "^3.3.3333"
  }
}
